@model IEnumerable<ProyectoVentasAB.Models.tblVentas>

@{
    ViewData["Title"] = "Ventas";
}
<div class="col-12">

    <div class="card">
        <div class="card-header bg-primary">
            <h1 class="text-center align-content-end">Ventas</h1>
        </div>

        <div class="card-body">
            <p>
                <a asp-action="Create" class="btn btn-success">Agregar</a>
            </p>
            <table class="table table-responsive-lg table-active table-striped">
                <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaVenta)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cantidad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Precio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SubTotal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdProducto)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTienda)
                    </th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.FechaVenta)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Precio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Total)
                            </td>
                            <td>
                                @foreach (var valor in ViewBag.Producto)
                                {
                                    @if (item.IdProducto == valor.IdProducto)
                                    {
                                        @valor.NombreProducto;
                                    }
                                }
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cantidad)
                            </td>
                            <td>
                                @foreach (var valor in ViewBag.Tienda)
                                {
                                    @if (item.IdTienda == valor.IdTienda)
                                    {
                                        @valor.NombreTienda;
                                    }
                                }
                            </td>
                            <td>
                                @*<a asp-action="Edit" asp-route-id="@item.IdVenta" class="btn btn-warning ">Editar</a> |*@
                                @*<a asp-action="Details" asp-route-id="@item.IdVenta" class="btn btn-info ">Detalles</a> |*@
                                <a asp-action="Delete" asp-route-id="@item.IdVenta" class="btn btn-danger ">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>